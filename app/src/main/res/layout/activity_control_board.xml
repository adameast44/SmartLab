<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainCont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/kettleCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:checked="true"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="Kettle"
            android:textOn="ON!"
            android:textOff="OFF!"/>


        <LinearLayout
            android:id="@+id/kettleButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ket65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="65째C"/>

            <Button
                android:id="@+id/ket80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="80째C"/>

            <Button
                android:id="@+id/ket95"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="95째C"/>

            <Button
                android:id="@+id/ket100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100째C"/>

        </LinearLayout>
    </LinearLayout>

    <Switch
        android:id="@+id/switchAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:textSize="25sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="All Zones"
        android:textOn="ON!"
        android:textOff="OFF!"/>

    <Switch
        android:id="@+id/switchB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:textSize="25sp"
        android:padding="10dp"
        android:text="Zone 1"
        android:textOn="ON!"
        android:textOff="OFF!" />

    <com.me.adameastham.smartlab.ColorSeekBar
        android:id="@+id/colour1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <SeekBar
        android:id="@+id/brightness1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <Switch
        android:id="@+id/switchB2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:textSize="25sp"
        android:padding="10dp"
        android:text="Zone 2"
        android:textOn="ON!"
        android:textOff="OFF!"/>

    <com.me.adameastham.smartlab.ColorSeekBar
        android:id="@+id/colour2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <SeekBar
        android:id="@+id/brightness2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_black_1000"
        android:text="Hello World"
        android:id="@+id/txtOutput"/>

</LinearLayout>
